<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/display_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/com_facebook_profile_picture_blank_square"
        android:layout_margin="@dimen/fab_margin"/>
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/display_picture"
        android:layout_toEndOf="@+id/display_picture"
        android:text="User Name"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/display_picture"
        android:layout_below="@+id/user_name"
        android:text="User Id"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/broadcasts_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/display_picture"
        android:layout_alignStart="@+id/display_picture"
        android:text="Broadcasts"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
</RelativeLayout>