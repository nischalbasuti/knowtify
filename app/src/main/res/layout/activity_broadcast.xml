<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.hydratech19gmail.notify.BroadcastActivity">

    <RelativeLayout
        android:id="@+id/header_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:animateLayoutChanges="true">

        <ImageView android:id="@+id/thumbnail"
            android:layout_marginStart="@dimen/fab_margin"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/announcement_icon"
            android:layout_marginEnd="@dimen/fab_margin">
        </ImageView>

        <TextView
            android:id="@+id/broadcast_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/thumbnail"
            android:layout_toRightOf="@+id/thumbnail"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="info about broadcast:
nalskdjflasfjlasdflaslkdfjaslkfjaskfasdfasdfadsf
asdfasdfasdfasdfasdf
asfasdfasdfasdfasdfasdfasdfa"
            android:layout_marginEnd="@dimen/fab_margin"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/notificationList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:divider="#b5b5b5"
        android:dividerHeight="10dp"
        android:layout_below="@+id/header_container"
        android:listSelector="@drawable/list_selector"
        />

</RelativeLayout>
