<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/customshape">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/broadcastTitle"
        android:paddingLeft="8dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:id="@+id/dropDownMenu"
        android:src="@drawable/icon_menu_dropdown"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/broadcasterName"
        android:layout_below="@+id/broadcastTitle"
        android:paddingLeft="8dp" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/light_grey"
        android:layout_below="@+id/broadcasterName"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/contentLayout"
        android:layout_below="@+id/broadcasterName">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:text="Subject:"
            android:id="@+id/subject"
            android:layout_below="@+id/broadcasterName"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:text="New Text"
            android:id="@+id/content"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:padding="10dp"/>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/light_grey"
        android:layout_below="@+id/contentLayout"/>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/contentLayout"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:text="12:50 25/06/2016"
            android:id="@+id/time"
            android:textSize="12dp"
            android:padding="10dp" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_attachment"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"
            android:paddingTop="10dp"
            android:id="@+id/attachment" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_ask_questions"
            android:layout_toLeftOf="@id/attachment"
            android:adjustViewBounds="true"
            android:paddingTop="10dp"
            android:id="@+id/ask_question" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_alarm_clock"
            android:layout_toLeftOf="@id/ask_question"
            android:adjustViewBounds="true"
            android:paddingTop="10dp"
            android:id="@+id/renimder" />
    </RelativeLayout>

</RelativeLayout>